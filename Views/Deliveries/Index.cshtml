@model IEnumerable<MEDIplan.Models.Delivery>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medication.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory.InventoryId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeliveryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DeliveryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DeliveryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
